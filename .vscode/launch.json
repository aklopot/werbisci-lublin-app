{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Werbisci Lublin: Frontend (Vite)",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "command": "Write-Host \"`e]0;Werbisci Lublin - Frontend`a\" -NoNewline; npm run dev"
    },
    {
      "name": "Werbisci Lublin: Backend (Uvicorn)",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "command": "Write-Host \"`e]0;Werbisci Lublin - Backend`a\" -NoNewline; .venv_werbisci-lublin-app/Scripts/python.exe -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
      "env": {
        "SQLITE_DB_PATH": "data/werbisci-app.db"
      }
    }
  ],
  "compounds": [
    {
      "name": "Werbisci Lublin: Full Stack (Frontend + Backend)",
      "configurations": [
        "Werbisci Lublin: Frontend (Vite)",
        "Werbisci Lublin: Backend (Uvicorn)"
      ],
      "stopAll": true
    }
  ]
}


